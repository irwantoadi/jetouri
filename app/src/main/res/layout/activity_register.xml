<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register"
    tools:context=".RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/register_daftar"
                android:adjustViewBounds="true"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingLeft="50dp"
                android:textSize="20sp"
                android:inputType="text"
                android:background="@drawable/register_bg_name"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/register_text_email"
                android:adjustViewBounds="true"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/register_bg_email"
                android:paddingLeft="50dp"
                android:textSize="20sp"
                android:inputType="textEmailAddress"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/register_text_password"
                android:adjustViewBounds="true"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/register_bg_password"
                android:paddingLeft="50dp"
                android:textSize="20sp"
                android:inputType="textPassword"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/register_text_konf_pass"
                android:adjustViewBounds="true"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/register_bg_konf_pass"
                android:paddingLeft="50dp"
                android:textSize="20sp"
                android:inputType="textPassword"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/register_bg_up_btn"
                android:adjustViewBounds="true"/>
            <ImageButton
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:src="@drawable/register_btn_daftar"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/register_bg_bottom_btn"
                android:adjustViewBounds="true"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>